@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.AboutInfoSection)Model.Content;
}

<div>
    <div class="container about-info-flex">
        <div class="about-info-image">
            <img src="@content.AboutInfoImage.Url()"/>
            <p class="about-info-img-text">@content.AboutInfoImageText</p>
        </div>
        <div class="about-info-text">
            <p class="about-info-title">@content.AboutInfoTitle</p>
            @Html.Raw(content.AboutInfoText)
        </div>

    </div>
</div>