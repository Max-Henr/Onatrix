@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.ContactInfoSection)Model.Content;
    var settings = Model.Settings as ContentModels.ContactInfoSettings;

    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var contactAddress = siteSettings.ContactAddress;
    var phoneNumber = siteSettings.ContactPhone;
    var email = siteSettings.ContactEmail;
}

<section class="contact-info-section" style="background-color: @settings.BgColor">
    <div class="container contact-info-flex">
        <div>
            <img src="@content.ContactInfoImage.Url()" />
        </div>
        <div>
            <h2>@content.ContactInfoTitle</h2>
            <div class="contact-info">
                <div class="contact-address">
                    <i class="fa-solid fa-location-dot"></i>
                    <div class="contact-info-details">
                        <span>Office location</span>
                        <p>@contactAddress</p>
                    </div>
                </div>
                <div class="contact-phone">
                    <i class="fa-solid fa-phone-flip"></i>  
                    <div class="contact-info-details">
                        <span>Phone number</span>
                        <p>@phoneNumber</p>
                    </div>
                </div>
                <div class="contact-email">
                    <i class="fa-solid fa-envelope"></i>
                    <div class="contact-info-details">
                        <span>E-mail address</span>
                        <p>@email</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>